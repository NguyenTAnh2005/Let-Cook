<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountChangeWithPassword">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:orientation="vertical"
        android:background="#EEE"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">
        <TextView
            android:id="@+id/nav5_act3_password_str_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_textcolor"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/nav5_act3_password_str0"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav5_act3_password_str_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav5_act3_password_str1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/light_textcolor"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.75">
                <EditText
                    android:id="@+id/nav5_act3_password_str_1_value"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/nav5_act3_password_str1_value"
                    android:textSize="12sp"
                    android:textColor="@color/light_textcolor"
                    android:textColorHint="@color/light_textcolor"
                    android:ems="10"
                    android:inputType="textPassword"
                    />
                <ImageView
                    android:id="@+id/nav5_act3_password_str_1_value_eye"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/baseline_visibility_off_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <Button
                android:id="@+id/nav5_act3_password_str_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav5_act3_password_str3"
                android:backgroundTint="#756A6A"
                android:textSize="20sp"
                android:textColor="@color/dark_textcolor"/>
            <Button
                android:id="@+id/nav5_act3_password_str_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="@string/nav5_act3_password_str4"
                android:backgroundTint="@color/background_theme1"
                android:textSize="20sp"
                android:textColor="@color/light_textcolor"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountChangeWithEmail"
    android:background="@color/light_background">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:orientation="vertical"
        android:background="#EEE"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">
        <TextView
            android:id="@+id/nav5_act3_email_str0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_textcolor"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/nav5_act3_email_str0"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav5_act3_email_str2"
                android:textColor="@color/light_textcolor"
                android:textSize="10sp"
                android:textStyle="italic"
                android:gravity="center"/>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/nav5_act3_email_str_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav5_act3_email_str3"/>
                <EditText
                    android:id="@+id/nav5_act3_email_str_3_value"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/nav5_act3_email_str3_value"
                    android:textSize="12sp"
                    android:textColor="@color/light_textcolor"
                    android:textColorHint="@color/light_textcolor"
                    android:ems="10"
                    android:inputType="text"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <Button
                android:id="@+id/nav5_act3_email_str_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav5_act3_email_str4"
                android:backgroundTint="#756A6A"
                android:textSize="20sp"
                android:textColor="@color/dark_textcolor"/>
            <Button
                android:id="@+id/nav5_act3_email_str_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="@string/nav5_act3_email_str5"
                android:backgroundTint="@color/background_theme1"
                android:textSize="20sp"
                android:textColor="@color/light_textcolor"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
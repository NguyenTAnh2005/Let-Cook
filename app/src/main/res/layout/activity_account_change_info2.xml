<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountChangeInfo2"
    android:background="@color/light_background">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="#EEE"
        android:orientation="vertical"
        android:paddingBottom="30dp">
        <TextView
            android:id="@+id/nav5_act3_str_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nav5_act3_str0"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/light_textcolor"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/uad_icon"/>
        <TextView
            android:id="@+id/nav5_act1_str_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nav5_act1_str1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/light_textcolor"/>
        <TextView
            android:id="@+id/nav5_act1_str_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nav5_act1_str2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/light_textcolor"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/nav5_act3_str_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav5_act3_str1"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/light_textcolor"/>
            <EditText
                android:id="@+id/nav5_act3_str_1_value"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textEmailAddress"
                android:hint="@string/nav5_act3_str1_value"
                android:textColorHint="@color/light_textcolor"
                android:textSize="12sp"
                android:textColor="@color/light_textcolor"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav5_act3_str_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav5_act3_str2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/light_textcolor"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.75">
                <EditText
                    android:id="@+id/nav5_act3_str_2_value"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/nav5_act3_str2_value"
                    android:textSize="12sp"
                    android:textColor="@color/light_textcolor"
                    android:textColorHint="@color/light_textcolor"
                    android:ems="10"
                    android:inputType="textPassword"
                    />
                <ImageView
                    android:id="@+id/nav5_act3_str_2_value_eye"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/baseline_visibility_off_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav5_act3_str_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav5_act3_str3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/light_textcolor"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.75">
                <EditText
                    android:id="@+id/nav5_act3_str_3_value"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/nav5_act3_str3_value"
                    android:textSize="12sp"
                    android:textColor="@color/light_textcolor"
                    android:textColorHint="@color/light_textcolor"
                    android:ems="10"
                    android:inputType="textPassword"
                    />
                <ImageView
                    android:id="@+id/nav5_act3_str_3_value_eye"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/baseline_visibility_off_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>
        </LinearLayout>
            <Button
                android:id="@+id/nav5_act3_str_4"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav5_act3_str4"
                android:backgroundTint="@color/background_theme_yellow"
                android:textSize="20sp"
                android:textColor="@color/light_textcolor"/>
            <Button
                android:id="@+id/nav5_act3_str_5"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav5_act3_str5"
                android:backgroundTint="@color/background_theme1"
                android:textSize="20sp"
                android:textColor="@color/light_textcolor"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassActivity"
    android:background="@color/light_background">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#EEE"
        android:orientation="vertical">
        <TextView
            android:id="@+id/forgotpass_str_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgotpass_str1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/light_textcolor"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/forgotpass_str_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotpass_str2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/light_textcolor"/>
        <EditText
            android:id="@+id/forgotpass_str_2_value"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/forgotpass_str2_value"
            android:textColorHint="@color/light_textcolor"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:textColor="@color/light_textcolor"
            />
        <TextView
            android:id="@+id/forgotpass_str_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotpass_str3"
            android:textSize="10sp"
            android:textStyle="italic"
            android:gravity="center"
            android:textColor="@color/light_textcolor"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/forgotpass_str_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/forgotpass_str4"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/light_textcolor"
                android:backgroundTint="@color/background_theme_yellow"/>
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.75">
                <EditText
                    android:id="@+id/forgotpass_str_4_value"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/forgotpass_str4_value"
                    android:textSize="10sp"
                    android:textColor="@color/light_textcolor"
                    android:textColorHint="@color/light_textcolor"
                    android:ems="10"
                    android:inputType="textPassword"
                    />
                <ImageView
                    android:id="@+id/forgotpass_str_4_value_eye"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/baseline_visibility_off_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="18dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/forgotpass_str_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/light_textcolor"
                android:backgroundTint="@color/background_theme_red"
                android:text="@string/forgotpass_str5"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/forgotpass_str_6"
                android:layout_marginLeft="50dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/light_textcolor"
                android:backgroundTint="@color/background_theme1"
                android:text="@string/forgotpass_str6"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
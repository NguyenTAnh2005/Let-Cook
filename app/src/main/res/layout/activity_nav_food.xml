<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_food"
    android:background="@color/light_background">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="0dp"
        android:background="@color/background_theme1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/text_slogan"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="6"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/nav2_slogan"/>
        <ImageView
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/setting" />
    </LinearLayout>
    <EditText
        android:id="@+id/food_search"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="48dp"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="#FAEEEE"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:ems="15"
        android:hint="Search food"
        android:textColor="#000000"
        android:textColorHint="#504242"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Spinner
        android:id="@+id/nav_food_spinner"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        android:background="@color/background_theme1"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_search" />
    <ListView
        android:id="@+id/nav_food_listview"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_food_spinner"
        android:background="#EEE"/>
    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#EEE"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/nav_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/home_icon" />
            <TextView
                android:id="@+id/nav1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav1_str"
                android:textSize="13sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nav_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/food_icon" />
            <TextView
                android:id="@+id/nav2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav2_str"
                android:textSize="13sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nav_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/post_icon" />
            <TextView
                android:id="@+id/nav3_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav3_str"
                android:textSize="13sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nav_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/favorite_icon" />
            <TextView
                android:id="@+id/nav4_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav4_str"
                android:textSize="13sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nav_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/account_icon" />
            <TextView
                android:id="@+id/nav5_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav5_str"
                android:textSize="13sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nav_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/uad_icon" />
            <TextView
                android:id="@+id/nav6_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav6_str"
                android:textSize="13sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/copyright"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:background="@color/light_textcolor"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>